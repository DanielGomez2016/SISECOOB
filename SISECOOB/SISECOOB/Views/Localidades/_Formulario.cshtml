@model SISECOOB.Models.Localidades

@using (Html.BeginForm())
{
    <fieldset>
        <div class="col-md-12 col-sm-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Nombre, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MunicipioId_FK, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.DropDownList("MunicipioId_FK", new SelectList(ViewBag.Municipios, "id", "nombre"), "Todos", new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>
}

