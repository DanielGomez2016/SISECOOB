@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Roles";
}

<p><br /><br /><br /><a href="RolesAdmin/Create" class="btn btn-success">Nuevo Rol</a></p>

<table class="table  table-hover table-stripped"><thead>
    <tr>
        <th class="col-md-6">
            Nombre rol
        </th>
        <th class="col-md-6">
            Acciones
        </th>
    </tr>
</thead>
    @foreach (var item in Model)
    {
        <tr>
            <td  class="col-md-6">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td  class="col-md-6">
                @Html.ActionLink("Editar", "Edit", new { id = item.Id },new { @class = "btn btn-primary" }) 
                @*@Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-info" })*@ 
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
